{
    "name": "Michaucha - Ingreso Inteligente de Gastos",
    "nodes": [
        {
            "parameters": {
                "httpMethod": "POST",
                "path": "michaucha-test",
                "options": {}
            },
            "id": "webhook-trigger",
            "name": "Webhook (Test)",
            "type": "n8n-nodes-base.webhook",
            "typeVersion": 1,
            "position": [
                820,
